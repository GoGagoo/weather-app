{
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es6",
		"jsx": "react-jsx",
		"strict": true,
		"allowJs": true,
		"moduleResolution": "node",
		"paths": {
			"@/*": ["./src/*"]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["src"]
}
